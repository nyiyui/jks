{
  "manifest_version": 2,
  "name": "JKS from Thunderbird",
  "description": "Creates tasks in JKS using used-specified rules from Thunderbird emails.",
  "version": "1.0",
  "author": "nyiyui",
  "browser_specific_settings": {
    "gecko": {
      "id": "thunderbird@jks.nyiyui.ca",
      "strict_min_version": "128.0"
    }
  },
  "permissions": [
    "nativeMessaging"
  ],
  "browser_action": {
    "default_popup": "mainPopup/popup.html",
    "default_title": "Hello World"
  }
}

